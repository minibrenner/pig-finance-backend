// Este é o seu arquivo de schema do Prisma,
// aprenda mais sobre ele na documentação: https://pris.ly/d/prisma-schema

// Define o gerador de cliente, que nos permitirá fazer queries no código.
generator client {
  provider = "prisma-client-js"
}

// Define a fonte de dados (nosso banco de dados).
datasource db {
  provider = "postgresql" // Estamos dizendo ao Prisma que vamos usar PostgreSQL.
  url      = env("DATABASE_URL") // O Prisma vai pegar a URL de conexão do nosso arquivo .env.
}

// --- NOSSOS MODELOS DE DADOS COMEÇAM AQUI ---

model User {
  id        String   @id @default(uuid()) // Chave primária, com um UUID gerado automaticamente.
  email     String   @unique // O email de cada usuário deve ser único.
  name      String
  password  String
  createdAt DateTime @default(now()) // Data de criação, preenchida automaticamente.
  updatedAt DateTime @updatedAt // Data da última atualização, gerenciada pelo Prisma.
}